<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
 "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- CloudKit for SwiftData sync -->
    <key>com.apple.developer.icloud-services</key>
    <array>
        <string>CloudKit</string>
    </array>

    <!-- Use the iCloud container matching your bundle id -->
    <key>com.apple.developer.icloud-container-identifiers</key>
    <array>
        <string>iCloud.$(CFBundleIdentifier)</string>
    </array>

    <!-- Development or Production; Xcode flips this when archiving for App Store/TestFlight -->
    <key>com.apple.developer.icloud-container-environment</key>
    <string>Development</string>

    <!-- Remote notifications (silent pushes for CloudKit background sync, and for Live Activity push updates) -->
    <key>aps-environment</key>
    <string>development</string>

    <!-- Live Activities capability -->
    <key>com.apple.developer.usernotifications.live-activities</key>
    <true/>

    <!-- App Group for sharing data with Widget extension (update identifier if you prefer a different group id) -->
    <key>com.apple.security.application-groups</key>
    <array>
        <string>group.$(CFBundleIdentifier)</string>
    </array>
</dict>
</plist>
